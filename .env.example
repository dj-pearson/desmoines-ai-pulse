# ============================================================================
# Environment Configuration for Des Moines AI Pulse
# ============================================================================
# Copy this file to .env and fill in your actual values
# ============================================================================

# ----------------------------------------------------------------------------
# Supabase Configuration (REQUIRED)
# ----------------------------------------------------------------------------
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# ----------------------------------------------------------------------------
# SEO Management - Required for Core Features (FREE)
# ----------------------------------------------------------------------------

# Google PageSpeed Insights API Key (REQUIRED - FREE)
# Get it at: https://console.cloud.google.com/
# 1. Create/select a project
# 2. Enable "PageSpeed Insights API"
# 3. Go to Credentials → Create Credentials → API Key
# Free tier: 25,000 requests/day
PAGESPEED_INSIGHTS_API_KEY=your_google_pagespeed_api_key

# ----------------------------------------------------------------------------
# SEO Management - Optional Integrations
# ----------------------------------------------------------------------------

# Google Search Console API (OPTIONAL - FREE)
# Get it at: https://console.cloud.google.com/
# 1. Enable "Google Search Console API"
# 2. Create OAuth 2.0 Client ID (Web application)
# 3. Add authorized redirect URI: https://your-domain.com/oauth/callback
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://your-domain.com/oauth/callback

# Backlink Tracking APIs (OPTIONAL - Choose one)
# Ahrefs API ($99/month) - Most comprehensive backlink data
AHREFS_API_KEY=your_ahrefs_api_key

# OR Moz API ($79/month) - Good alternative
MOZ_ACCESS_ID=your_moz_access_id
MOZ_SECRET_KEY=your_moz_secret_key

# SERP Position Tracking (OPTIONAL - Choose one)
# SERPApi ($50/month) - Easiest to use
SERPAPI_KEY=your_serpapi_key

# OR DataForSEO ($30/month) - More affordable
DATAFORSEO_LOGIN=your_dataforseo_login
DATAFORSEO_PASSWORD=your_dataforseo_password

# Email Notifications (OPTIONAL)
# Options: console (logs to console), resend, sendgrid
EMAIL_PROVIDER=console

# Resend API (Recommended - $20/month for 50k emails)
# Get it at: https://resend.com/
RESEND_API_KEY=your_resend_api_key
EMAIL_FROM=noreply@yourdomain.com

# OR SendGrid API
SENDGRID_API_KEY=your_sendgrid_api_key

# Slack Notifications (OPTIONAL)
# Create incoming webhook at: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Discord Notifications (OPTIONAL)
# Create webhook in Discord channel settings
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# Cron Job Authentication (OPTIONAL)
# Generate a secure random string for authenticating scheduled tasks
CRON_SECRET=your_random_secret_key_here

# ----------------------------------------------------------------------------
# AI Configuration (OPTIONAL)
# ----------------------------------------------------------------------------

# OpenAI API Key (for AI-powered content optimization)
OPENAI_API_KEY=your_openai_api_key

# Anthropic API Key (for Claude AI features)
ANTHROPIC_API_KEY=your_anthropic_api_key

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------

# Site URL (used for sitemap generation and redirects)
VITE_SITE_URL=https://desmoinesinsider.com

# Analytics
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ----------------------------------------------------------------------------
# Supabase Edge Function Secrets
# ----------------------------------------------------------------------------
# These should be set using: supabase secrets set KEY=value
# Not in .env file (for security)
#
# Required:
# - PAGESPEED_INSIGHTS_API_KEY
#
# Optional:
# - GOOGLE_CLIENT_ID
# - GOOGLE_CLIENT_SECRET
# - GOOGLE_REDIRECT_URI
# - AHREFS_API_KEY or MOZ_ACCESS_ID/MOZ_SECRET_KEY
# - SERPAPI_KEY or DATAFORSEO_LOGIN/DATAFORSEO_PASSWORD
# - EMAIL_PROVIDER, RESEND_API_KEY, EMAIL_FROM
# - SLACK_WEBHOOK_URL
# - DISCORD_WEBHOOK_URL
# - CRON_SECRET
# - OPENAI_API_KEY
# - ANTHROPIC_API_KEY
# ----------------------------------------------------------------------------

