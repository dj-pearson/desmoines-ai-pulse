  Content-Type: image/svg+xml

/*.ico
  Cache-Control: public, max-age=31536000, immutable

# Video files - Long cache with streaming support
/*.mp4
  Cache-Control: public, max-age=2592000
  Accept-Ranges: bytes

/*.webm
  Cache-Control: public, max-age=2592000
  Accept-Ranges: bytes

/*.ogg
  Cache-Control: public, max-age=2592000
  Accept-Ranges: bytes

# Manifest and other meta files
/manifest.json
  Cache-Control: public, max-age=86400
  Content-Type: application/json

/site.webmanifest
  Cache-Control: public, max-age=86400
  Content-Type: application/json

