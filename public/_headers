# Security and Performance Headers for Des Moines Insider
/*
  # Content Security Policy - Enhanced for performance and security
  Content-Security-Policy: default-src 'self'; script-src 'self' https://js.stripe.com https://www.googletagmanager.com https://unpkg.com https://cdn.jsdelivr.net https://maps.googleapis.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.jsdelivr.net; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: blob: https: http:; connect-src 'self' https://wtkhfqpmcegzcbngroui.supabase.co https://api.stripe.com https://maps.googleapis.com https://api.openai.com https://places.googleapis.com wss://wtkhfqpmcegzcbngroui.supabase.co; frame-src 'self' https://js.stripe.com https://www.google.com; object-src 'none'; base-uri 'self'; report-uri /csp-violation-report-endpoint/
  
