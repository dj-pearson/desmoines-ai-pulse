# ──────────────────────────────────────────────────
# Mobile App Environment Variables
# Copy to .env and fill in your values
# ──────────────────────────────────────────────────

# Supabase (same as web app)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# Site URL (used for deep link verification)
VITE_SITE_URL=https://desmoinespulse.com

# ──── iOS ────────────────────────────────────────
# Apple Developer Team ID (from developer.apple.com)
APPLE_TEAM_ID=
# App Store Connect Team ID (numeric)
ITC_TEAM_ID=
# Apple App ID (from App Store Connect)
APPLE_APP_ID=
# Bundle ID
IOS_BUNDLE_ID=com.desmoinespulse.app

# ──── Android ────────────────────────────────────
# Android Package Name
ANDROID_PACKAGE_NAME=com.desmoinespulse.app
# Path to Play Store service account key JSON
PLAY_STORE_KEY_FILE=./play-store-key.json
# Keystore password (for release signing)
ANDROID_KEYSTORE_PASSWORD=
ANDROID_KEY_ALIAS=
ANDROID_KEY_PASSWORD=

# ──── Push Notifications ─────────────────────────
# Firebase project ID (for Android FCM)
FIREBASE_PROJECT_ID=
# APNs Auth Key ID (for iOS push)
APNS_KEY_ID=
